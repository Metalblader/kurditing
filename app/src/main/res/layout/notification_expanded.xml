<?xml version="1.0" encoding="utf-8"?>
<!-- custom layout untuk notification videoChannel ketika dalam keadaan expanded -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_view_expanded"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPurpleButton"
        android:padding="8dp"
        android:text="Video Player is running"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/image_view_expanded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
</LinearLayout>