<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">


    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_search"
        android:drawableLeft="@drawable/ic_searchbox"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="@string/search_text"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        style="?borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/poppins"
        android:text="Batal"
        android:textAllCaps="false"
        android:textColor="@color/colorPurpleDark"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextTextPersonName5"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kategori"
            android:layout_marginLeft="24dp"
            android:textColor="@color/colorPurpleDark"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="8dp"/>

        <Button
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="left|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Digital Marketing"
            android:textAllCaps="false"
            android:textColor="@color/colorPurpleBlack" />

        <Button
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="left|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Closing dan Penjualan"
            android:textAllCaps="false"
            android:textColor="@color/colorPurpleBlack" />

        <Button
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="left|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Model Bisnis"
            android:textAllCaps="false"
            android:textColor="@color/colorPurpleBlack" />

        <Button
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="left|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Keahlian lainnya..."
            android:textAllCaps="false"
            android:textColor="@color/colorPurpleBlack" />

        
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>